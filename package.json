  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "lint": "eslint . --max-warnings=0",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "type-check": "tsc --project tsconfig.json --noEmit",
