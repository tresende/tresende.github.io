    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "husky": "^7.0.2",
    "jest": "^28.0.3",
    "jest-environment-jsdom": "^28.0.2",
    "jest-styled-components": "^7.0.8",
    "lint-staged": "^12.4.1",
